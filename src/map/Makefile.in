CFLAGS = @CPPFLAGS@ -g -c -Wall -O2
CC = @CXX@
CPP = @CXX@
LDFLAGS = @LDFLAGS@
LIBS= @LIBS@
EFLAGS = @CPPFLAGS@ $(LDFLAGS) $(LIBS)

BINDIR = ../../bin/
ENDGUI = ../gui/
ENDENGINE = ../engine/
ENDPART=../particle/
ENDETC=../etc/
ENDCLASSES=../classes/
ENDSOUND=../sound/
OBJSGUI = $(ENDGUI)bartexto.o $(ENDGUI)botao.o $(ENDGUI)cores.o $(ENDGUI)cxsel.o $(ENDGUI)desenho.o $(ENDGUI)erro.o $(ENDGUI)eventos.o $(ENDGUI)farso.o $(ENDGUI)figura.o $(ENDGUI)fonte.o $(ENDGUI)janela.o $(ENDGUI)lista.o $(ENDGUI)menu.o $(ENDGUI)mouse.o $(ENDGUI)nstring.o $(ENDGUI)quadtexto.o $(ENDGUI)seltexto.o

all: objetos

door.o: door.cpp door.h
	@printf "Making $@...\n"
	@$(CC) $(CFLAGS) door.cpp -o $@
	@printf "\e[0;32mDone\e[0;0m ($@)\n"

map.o: map.cpp map.h mapfog.h maplights.h maproad.h door.h $(ENDPART)lake.h
	@printf "Making $@...\n"
	@$(CPP) $(CFLAGS) map.cpp -o $@
	@printf "\e[0;32mDone\e[0;0m ($@)\n"

mapfog.o: mapfog.cpp mapfog.h
	@printf "Making $@...\n"
	@$(CC) $(CFLAGS) mapfog.cpp -o $@
	@printf "\e[0;32mDone\e[0;0m ($@)\n"

maplights.o: maplights.cpp maplights.h
	@printf "Making $@...\n"
	@$(CC) $(CFLAGS) maplights.cpp -o $@
	@printf "\e[0;32mDone\e[0;0m ($@)\n"

maproad.o: maproad.cpp maproad.h $(ENDENGINE)util.h
	@printf "Making maproad.o...\n"
	@$(CC) $(CFLAGS) maproad.cpp -o $@
	@printf "\e[0;32mDone\e[0;0m ($@)\n"

mapsound.o: mapsound.cpp mapsound.h $(ENDSOUND)sound.h $(ENDETC)defparser.h
	@printf "Making $@...\n"
	@$(CC) $(CFLAGS) mapsound.cpp -o $@
	@printf "\e[0;32mDone\e[0;0m ($@)\n"

objetos: door.o map.o mapfog.o maplights.o maproad.o mapsound.o

clean: 
	@printf  "Cleaning Map Bin Files...\n"
	@\rm -Rf ./*.o $(BINDIR)testeMapa
