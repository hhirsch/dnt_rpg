CFLAGS = @CPPFLAGS@ -g -c -Wall -O2
CC = @CXX@
CPP= @CXX@
LDFLAGS = @LDFLAGS@
LIBS= @LIBS@
EFLAGS = @CPPFLAGS@ $(LDFLAGS) $(LIBS)

all: animodel.o distance.o glm.o fifo.o modellist.o texture.o

animodel.o: animodel.h animodel.cpp
	@printf "Making animodel.o... "
	@$(CPP) $(CFLAGS) -c animodel.cpp -o animodel.o
	@printf "\e[0;32mDone.\e[0;0m\n"

distance.o: distance.h distance.cpp
	@printf "Making distance.o... "
	@$(CPP) $(CFLAGS) -c distance.cpp -o distance.o
	@printf "\e[0;32mDone.\e[0;0m\n"

texture.o: texture.h texture.cpp
	@printf "Making texture.o... "
	@$(CPP) $(CFLAGS) -c texture.cpp -o texture.o
	@printf "\e[0;32mDone.\e[0;0m\n"

glm.o: glm.h glm.cpp
	@printf "Making glm.o... "
	@$(CPP) $(CFLAGS) -c glm.cpp -o glm.o
	@printf "\e[0;32mDone.\e[0;0m\n"

fifo.o: fifo.cpp fifo.h
	@printf "Making fifo.o... "
	@$(CPP) $(CFLAGS) -c fifo.cpp -o fifo.o
	@printf "\e[0;32mDone.\e[0;0m\n"

fifo: fifo.cpp fifo.h
	$(CPP) $(CFLAGS) -DFIFO_TEST fifo.cpp -o fifo

modellist.o: modellist.h modellist.cpp
	@printf "Making modellist.o... "
	@$(CPP) $(CFLAGS) -c modellist.cpp -o modellist.o
	@printf "\e[0;32mDone.\e[0;0m\n"

clean:
	@printf "Cleaning Etc Bin Files... "
	@\rm -rf *.o fifo
	@printf "\e[0;32mDone.\e[0;0m\n"
