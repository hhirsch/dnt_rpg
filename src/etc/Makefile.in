CFLAGS = @CPPFLAGS@ -g -c -Wall -O2
CC = @CXX@
CPP= @CXX@
LDFLAGS = @LDFLAGS@
LIBS= @LIBS@
EFLAGS = @CPPFLAGS@ $(LDFLAGS) $(LIBS)

ENDCLASSES=../classes/

all: animodel.o btree.o boundingbox.o btreecell.o defparser.o distance.o\
     dirs.o extensions.o \
     list.o message3d.o modellist.o npcfile.o overlaps.o shader.o \
     texrenderer.o userinfo.o

animodel.o: animodel.h animodel.cpp $(ENDCLASSES)thing.h dirs.h overlaps.h
	@printf "Making animodel.o... "
	@$(CPP) $(CFLAGS) -c animodel.cpp -o animodel.o
	@printf "\e[0;32mDone.\e[0;0m\n"

