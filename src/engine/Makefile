# DccNiTghtmare is public domain. Do whatever you want with this code.

CC = g++
CFLAGS = -g -c -Wall
EFLAGS = -g -Wall -lm -L/usr/X11R6/lib -lGLU -lGL -lSDL -lSDL_image -lSDL_mixer -lcal3d
PROGFLAGS = 
ENDGUI = ../gui/
ENDENGINE = ../engine/
ENDMAPA = ../map/
ENDNET = ../net/
ENDIA = ../ia/
ENDCLASSES = ../classes/
ENDSOUND = ../sound/
ENDLANG = ../lang/
ENDPART = ../particle/
OBJSMAPA = $(ENDMAPA)map.o $(ENDMAPA)mapfog.o $(ENDMAPA)maplights.o $(ENDMAPA)mapobjeto.o
OBJSGUI = $(ENDGUI)bartexto.o $(ENDGUI)botao.o $(ENDGUI)cores.o $(ENDGUI)cxsel.o $(ENDGUI)desenho.o $(ENDGUI)erro.o $(ENDGUI)eventos.o $(ENDGUI)farso.o $(ENDGUI)figura.o $(ENDGUI)fonte.o $(ENDGUI)janela.o $(ENDGUI)lista.o $(ENDGUI)menu.o $(ENDGUI)mouse.o $(ENDGUI)quadtexto.o $(ENDGUI)seltexto.o $(ENDGUI)tabbotao.o
OBJSNET = #$(ENDNET)client.o $(ENDNET)common.o
OBJSIA = $(ENDIA)ai.o
OBJSCLASSES = $(ENDCLASSES)skills.o $(ENDCLASSES)feats.o $(ENDCLASSES)defs.o
OBJSSOUND = $(ENDSOUND)sound.o
OBJSLANG = $(ENDLANG)lang.o
OBJSPART = $(ENDPART)part1.o $(ENDPART)part2.o $(ENDPART)part3.o $(ENDPART)part4.o $(ENDPART)part5.o $(ENDPART)part6.o $(ENDPART)part7.o $(ENDPART)particle.o
OBJS = conversa.o culling.o cursor.o dccnit.o ../etc/glm.o initial.o options.o ../etc/texture.o personagens.o skillwindow.o teste.o util.o
BIN = ../../bin/
SUPREDE = #-DREDE #comente para nao ter suporte a rede na bagaca
FIFO = ../etc/fifo.o

all: teste

conversa.o: conversa.cpp conversa.h
	@printf "Making conversa.o... "
	@$(CC) $(CFLAGS) conversa.cpp -o conversa.o
	@printf "\e[0;32mDone.\e[0;0m\n"

culling.o: culling.cpp culling.h
	@printf "Making culling.o... "
	@$(CC) $(CFLAGS) culling.cpp -o culling.o
	@printf "\e[0;32mDone.\e[0;0m\n"

cursor.o: cursor.cpp cursor.h
	@printf "Making cursor.o... "
	@$(CC) $(CFLAGS) cursor.cpp -o cursor.o
	@printf "\e[0;32mDone.\e[0;0m\n"

dccnit.o: dccnit.h dccnit.cpp
	@printf "Making dccnit.o... "
	@$(CC) $(CFLAGS) $(SUPREDE) dccnit.cpp -o dccnit.o
	@printf "\e[0;32mDone.\e[0;0m\n"

initial.o: initial.h initial.cpp
	@printf "Making initial.o... "
	@$(CC) $(CFLAGS) $(SUPREDE) initial.cpp -o initial.o
	@printf "\e[0;32mDone.\e[0;0m\n"

options.o: options.h options.cpp
	@printf "Making options.o... "
	@$(CC) $(CFLAGS) $(SUPREDE) options.cpp -o options.o
	@printf "\e[0;32mDone.\e[0;0m\n"

personagens.o: personagens.cpp personagens.h
	@printf "Making personagens.o... "
	@$(CC) $(CFLAGS) personagens.cpp -o personagens.o
	@printf "\e[0;32mDone.\e[0;0m\n"

skillwindow.o: skillwindow.h skillwindow.cpp
	@printf "Making skillwindow.o... "
	@$(CC) $(CFLAGS) $(SUPREDE) skillwindow.cpp -o skillwindow.o
	@printf "\e[0;32mDone.\e[0;0m\n"

teste.o: teste.cpp
	@printf "Making teste.o... "
	@$(CC) $(CFLAGS) $(SUPREDE) teste.cpp -o teste.o
	@printf "\e[0;32mDone.\e[0;0m\n"

util.o: util.cpp util.h
	@printf "Making util.o... "
	@$(CC) $(CFLAGS) $(SUPREDE) util.cpp -o util.o
	@printf "\e[0;32mDone.\e[0;0m\n"

teste: $(OBJSGUI) $(OBJSMAPA) $(OBJSNET) $(OBJSETC) $(OBJSCLASSES) $(OBJSLANG) $(OBJSSOUND) $(OBJSPART) $(OBJS) 
	@printf "Linking dccnitghtmare... "
	@$(CC) $(EFLAGS) $(OBJSGUI) $(OBJSCLASSES) $(OBJSLANG) $(OBJSNET) $(OBJSIA) $(FIFO) $(OBJSMAPA) $(OBJSSOUND) $(OBJSPART) $(OBJS) $(SUPREDE) -o $(BIN)dccnitghtmare
	@printf "\e[0;32mDone.\e[0;0m\n"

clean:
	@printf "Cleaning Engine Bin Files... "
	@\rm -rf *.o *.e $(BIN)dccnitghtmare
	@printf "\e[0;32mDone.\e[0;0m\n"
