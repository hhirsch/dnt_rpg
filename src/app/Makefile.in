OBJSFNT = $(OBJSGUI) $(ENDENGINE)culling.o $(ENDENGINE)util.o

all: parts $(BIN)heightmap2dnt

heightmap2dnt.o: heightmap2dnt.cpp
	@printf "Making $@...\n"
	@$(CC) $(CFLAGS) heightmap2dnt.cpp -o $@
	@printf "\e[0;32mDone\e[0;0m ($@)\n"	

$(BIN)heightmap2dnt: $(OBJSGUI) $(OBJSIA) $(OBJSMAPA) \
                     $(OBJSCBOOK) $(OBJSENGINE) $(OBJSPART) \
							$(OBJSCLASSES) $(OBJSLANG) $(OBJSETC) \
							$(OBJSSOUND) $(OBJSFIGHT) heightmap2dnt.o
	@printf "Linking $@...\n"
	@$(CC) $(EFLAGS) $(OBJSGUI) $(OBJSIA) $(OBJSCBOOK) $(OBJSMAPA) $(OBJSENGINE) $(OBJSPART) $(OBJSCLASSES) $(OBJSLANG) $(OBJSETC) $(OBJSSOUND) $(OBJSFIGHT) heightmap2dnt.o -o $@
	@printf "\e[0;32mLinked\e[0;0m ($@)\n"

parts:
	@for dir in ${SUBSYSTEMS}; do \
	   (echo "Making $$dir";echo " ";cd $$dir; ${MAKE} all;echo " "); \
	done

iaEditor: 
	@cd ./iaEditor; make all;

MapEditor: 
	@cd ./mapEditor; make all;

clean:
	@printf "Cleaning App Bin Files...\n"
	@\rm -rf *.o *.e ./mapEditor/*.o ./iaEditor/*.o $(BIN)DlgEditor $(BIN)mapEditor $(BIN)fntEditor $(BIN)dntPartEditor $(BIN)iaEditor $(BIN)dlgCompiler $(BIN)heightmap2dnt
	@for dir in ${SUBSYSTEMS}; do \
	   (echo " ";cd $$dir; ${MAKE} clean;echo " "); \
	done
	@printf "\e[0;32mCleaned.\e[0;0m\n"
