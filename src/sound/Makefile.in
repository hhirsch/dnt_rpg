CFLAGS = @CPPFLAGS@ -g -c -Wall -O2
CC = @CXX@
LDFLAGS = @LDFLAGS@
LIBS= @LIBS@
EFLAGS = @CPPFLAGS@ $(LDFLAGS) $(LIBS)

objs = ogg_stream.o sound.o sndfx.o

all: $(objs)

ogg_stream.o: ogg_stream.cpp ogg_stream.h
	@printf "Making ogg_stream.o... "
	@$(CC) $(CFLAGS) ogg_stream.cpp -o ogg_stream.o
	@printf "\e[0;32mDone.\e[0;0m\n"

sound.o: sound.cpp sound.h sndfx.h ogg_stream.h
	@printf "Making sound.o... "
	@$(CC) $(CFLAGS) sound.cpp -o sound.o
	@printf "\e[0;32mDone.\e[0;0m\n"

sndfx.o: sndfx.cpp sndfx.h ogg_stream.h
	@printf "Making sndfx.o... "
	@$(CC) $(CFLAGS) sndfx.cpp -o sndfx.o
	@printf "\e[0;32mDone.\e[0;0m\n"

testsound: $(objs) testsound.cpp
	@printf "Making testsound... "
	@$(CC) $(EFLAGS) testsound.cpp $(objs) ../etc/list.o ../etc/dirs.o $(LDFLAGS) -o testsound
	@printf "\e[0;32mDone.\e[0;0m\n"

clean: 
	@printf "Cleaning Sound Bin Files... "
	@\rm -rf *.o *.e testsound
	@printf "\e[0;32mDone.\e[0;0m\n"
