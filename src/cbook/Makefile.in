CFLAGS = @CPPFLAGS@ -g -c -Wall -O2
CC = @CXX@
CPP= @CXX@
LDFLAGS = @LDFLAGS@
LIBS= @LIBS@
EFLAGS = @CPPFLAGS@ $(LDFLAGS) $(LIBS)
ENDENGINE=../engine/
ENDGUI=../gui/
ENDETC=../etc/
ENDLANG=../lang/

all: comicbook.o comicbox.o comicpage.o

comicbook.o: comicbook.h comicbook.cpp comicpage.h comicbox.h \
             $(ENDENGINE)util.h $(ENDENGINE)cursor.h $(ENDETC)defparser.h \
				 $(ENDETC)dirs.h $(ENDGUI)draw.h $(ENDGUI)mouse.h \
				 $(ENDLANG)translate.h $(ENDETC)list.h
	@printf "Making $@...\n"
	@$(CPP) $(CFLAGS) -c comicbook.cpp -o $@
	@printf "\e[0;32mDone\e[0;0m ($@)\n"

comicbox.o: comicbox.h comicbox.cpp $(ENDETC)list.h $(ENDENGINE)util.h
	@printf "Making $@...\n"
	@$(CPP) $(CFLAGS) -c comicbox.cpp -o $@
	@printf "\e[0;32mDone\e[0;0m ($@)\n"

comicpage.o: comicpage.h comicpage.cpp comicbox.h $(ENDETC)list.h \
             $(ENDETC)dirs.h $(ENDGUI)dntfont.h $(ENDGUI)draw.h
	@printf "Making $@...\n"
	@$(CPP) $(CFLAGS) -c comicpage.cpp -o $@
	@printf "\e[0;32mDone\e[0;0m ($@)\n"

clean:
	@printf "Cleaning cbook Bin Files...\n"
	@\rm -rf *.o fifo
	@printf "\e[0;32mCleaned.\e[0;0m\n"
