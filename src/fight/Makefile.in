CFLAGS = @CPPFLAGS@ -g -c -Wall -O2
CC = @CXX@
LDFLAGS = @LDFLAGS@
LIBS= @LIBS@
EFLAGS = @CPPFLAGS@ $(LDFLAGS) $(LIBS)

ENDENGINE=../engine/
ENDETC=../etc/
ENDPART=../particle/

objetos = fightGroup.o initiative.o fightSystem.o


all: $(objetos)

fightGroup.o: fightGroup.cpp fightGroup.h $(ENDENGINE)character.h
	@printf "Making $@...\n"
	@$(CC) $(CFLAGS) fightGroup.cpp -o $@
	@printf "\e[0;32mDone\e[0;0m ($@)\n"

fightSystem.o: fightSystem.cpp fightSystem.h fightGroup.h initiative.h\
               $(ENDETC)message3d.h $(ENDPART)partcontroller.h
	@printf "Making $@...\n"
	@$(CC) $(CFLAGS) fightSystem.cpp -o $@
	@printf "\e[0;32mDone\e[0;0m ($@)\n"
 
initiative.o: initiative.cpp initiative.h $(ENDENGINE)character.h
	@printf "Making $@...\n"
	@$(CC) $(CFLAGS) initiative.cpp -o $@
	@printf "\e[0;32mDone\e[0;0m ($@)\n"


clean: 
	@printf  "Cleaning Classes Bin Files...\n"
	@\rm -Rf ./*.o
	@printf "\e[0;32mCleaned.\e[0;0m\n"

