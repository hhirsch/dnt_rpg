CFLAGS = @CPPFLAGS@ -g -c -Wall -O2
CC = @CXX@
LDFLAGS = @LDFLAGS@
LIBS= @LIBS@
EFLAGS = @CPPFLAGS@ $(LDFLAGS) $(LIBS)

OBJS = translate.o

all: $(OBJS)

translate.o: translate.cpp translate.h
	@printf "Making translate.o...\n"
	@$(CC) $(CFLAGS) translate.cpp -o $@
	@printf "\e[0;32mDone\e[0;0m ($@)\n"

clean: 
	@printf "Cleaning Lang Bin Files...\n"
	@\rm -rf *.o *.e
	@printf "\e[0;32mCleaned.\e[0;0m\n"
